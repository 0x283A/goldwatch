doctype html
html(lang='en')
	head
		title Goldwatch
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", rel="stylesheet")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
		link(href="css/custom.css", rel="stylesheet")
	body.d-flex.flex-column.h-100
		header
			nav.navbar.navbar-expand-lg.fixed-top.navbar-dark.bg-dark
				a.navbar-brand(href="/") Goldwatch
				
				button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation")
					span.navbar-toggler-icon

				div.collapse.navbar-collapse
					ul.navbar-nav.mr-auto
						li.nav-item
							a(href="/").nav-link Home
						li.nav-item
							a(href="/mail").nav-link Mail overview
						li.nav-item
							a(href="/transactions").nav-link Balance changes
						li.nav-item
							a(href="/about").nav-link About

		main.flex-shrink-0
			div.container
				block content